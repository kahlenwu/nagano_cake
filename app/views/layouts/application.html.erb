<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="shadow-sm">
      <nav class="navbr navbar-expand-lg">
        <div class="container">
          <a class="navbar-brand" href="/"><span>LOGO</span></a>
          <% if customer_signed_in? %>
            <p class"text-light">ようこそ、<%= current_customer.last_name %>さん！</p>
          <% end %>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if customer_signed_in? %>
                <li>
                  <%= link_to "マイページ", customer_path(current_customer.id) %>
                </li>
                <li>
                  <%= link_to "商品一覧", products_path %>
                </li>
                <li>
                  <%= link_to "カート", cart_products_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path %>
                </li>
                <% else %>
                <li>
                  <%= link_to "About", about_path %>
                </li>
                <li>
                  <%= link_to "商品一覧", products_path %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path %>
                </li>
              <% end %>
            </ul>

          </div>
        </div>
      </nav>
    </header>
    <main style="margin-bottom:80px">
      <div class="container p-3">
        <p class="text-success"><%= notice %></p>
        <p class="text-danger"><%= alert %></p>
    <%= yield %>
      </div>
    </main>
    <footer>
      <div class="container mt-5">
        <p>CopyRight Infratop.inc</p>
      </div>
    </footer>
  </body>
</html>
