<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header class="shadow-sm">
      <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
          <%= link_to image_tag("logo.png", size: "180x50"), root_path %>
            <% if customer_signed_in? %>
              <p class"text-light">ようこそ、<%= current_customer.last_name %>さん！</p>
            <% end %>

            <!-- naviボタン-->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
              <span class="navbar-toggler-icon"></span>
            </button>

            <!--ボタンの中-->
            <div class="collapse navbar-collapse">
             <ul class="navbar-nav me-auto mb-2 mb-lg-0">
              <% if customer_signed_in? %>
                <li>
                  <%= link_to "マイページ", customer_path(current_customer.id) %>
                </li>
                <li>
                  <%= link_to "商品一覧", products_path %>
                </li>
                <li>
                  <%= link_to "カート", cart_products_path %>
                </li>
                <li>
                  <%= link_to "ログアウト", destroy_customer_session_path %>
                </li>
                <% else %>
                <li>
                  <%= link_to "About", about_path %>
                </li>
                <li>
                  <%= link_to "商品一覧", products_path %>
                </li>
                <li>
                  <%= link_to "新規登録", new_customer_registration_path %>
                </li>
                <li>
                  <%= link_to "ログイン", new_customer_session_path %>
                </li>
              <% end %>
              </ul>
            </div>
            <%= render "public/searches/form" %>
          </div>
        </div>
      </nav>
    </header>
    <main style="margin-bottom:80px">
      <div class="container p-3">
        <p class="text-success"><%= notice %></p>
        <p class="text-danger"><%= alert %></p>
    <%= yield %>
      </div>
    </main>
    <footer class="text-center">
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
